{
  "name": "bastion-ai-gateway",
  "version": "0.1.0",
  "description": "Local-first AI gateway for proxying LLM provider requests",
  "main": "dist/index.js",
  "bin": {
    "bastion": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsx src/cli/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "dlp:test": "tsx scripts/dlp-test-env.ts",
    "dlp:test:block": "tsx scripts/dlp-test-env.ts --action block",
    "dlp:test:redact": "tsx scripts/dlp-test-env.ts --action redact",
    "dlp:test:warn": "tsx scripts/dlp-test-env.ts --action warn",
    "dlp:test:interactive": "tsx scripts/dlp-test-env.ts --interactive"
  },
  "dependencies": {
    "better-sqlite3": "^11.7.0",
    "commander": "^13.1.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.13.4",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
